{% extends "AdminBundle::base.html.twig" %}

{% block title %}Lista produktów{% endblock %}

{% block body %}
    
    <a href="{{ path('admin_product_new') }}" class="btn btn-success pull-right" title="Dodaj produkt">Dodaj produkt</a>
    
    <h1>{{ block('title') }}</h1>

    <table class="table">
        <thead>
            <tr>
                <th>{{ knp_pagination_sortable(products, 'ID', 'p.id') }}</th>
                <th>{{ knp_pagination_sortable(products, 'Nazwa produktu', 'p.name') }}</th>
                <th>{{ knp_pagination_sortable(products, 'Kategoria', 'c.name') }}</th>
                <th>{{ knp_pagination_sortable(products, 'Cena', 'p.price') }}</th>
                <th>Akcje</th>
            </tr>
        </thead>
        <tbody>
            {% for product in products %}
                <tr>
                    <td>{{ product.id }}</td>
                    <td>{{ product.name }}</td>
                    <td>{{ product.category }}</td>
                    <td>{{ product.price }}</td>
                    <td>
                        <a class="btn btn-primary btn-sm" href="{{ path('admin_product_edit', {'id': product.id}) }}" > Edytuj </a>
                        <a class="btn btn-danger btn-sm" href="{{ path('admin_product_delete', {'id': product.id}) }}" > Usuń </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">Nie znaleziono produktów.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    {{ knp_pagination_render(products) }}

{% endblock %}
