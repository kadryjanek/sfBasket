{% extends "base.html.twig" %}

{% block title %}Lista produktów{% endblock %}

{% block body %}

    <h1>{{ block('title') }}</h1>
    
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nazwa produktu</th>
                <th>Cena</th>
                <th>Opis</th>
            </tr>
        </thead>
        <tbody>
            {% for product in products %}
                <tr>
                    <td>{{ product.id }}</td>
                    <td>{{ product.name }}</td>
                    <td>{{ product.price }}</td>
                    <td>{{ product.description }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">Nie znaleziono produktów.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    
{% endblock %}
